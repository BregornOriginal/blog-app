<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<section class='log_in_form'>
  <div class="field">
    <%= f.text_field :email, placeholder: :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: :password, autocomplete: "current-password" %>
  </div>

  <%# <% if devise_mapping.rememberable? %>
  <%#  <div class="field">
  <%#    <%= f.check_box :remember_me %>
  <%#    <%= f.label :remember_me %>
  <%#  </div>
  <%# <% end %> 

  <div class="actions">
    <%= f.submit "Log in", class: 'create_button' %>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <button class='create_button'><%= link_to "Sign up", new_registration_path(resource_name) %><br /></button>
      <% end %>
  </div>
<% end %>
</section>
