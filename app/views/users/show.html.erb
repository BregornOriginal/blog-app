<div class='back_button_container'>
  <%=link_to 'Go back', users_url, class: 'create_button back_button' %>
</div>

<section class='card_layout'>
  <div class='card_container'>
      <img alt='This is an image' src='<%=@user.photo%>' class='user_image'/>
      <div class='user-info'>
        <p><%= link_to @user.name, @user, class: 'user_name' %></p>
        <p>Number of posts: <%= @user.posts_counter%></p>
      </div>
    </div>
</section>
<section class='bio_container'>
  <article class='bio'>
    <p>Bio:</p>
    <p><%=@user.bio%></p>
  </article>
</section>

<% if @user.posts.empty? %>
<h4>No posts created</h4>
<% else %>
<section class='posts_container'>
<h4>Recents posts</h4>
<% @user.three_recent_post.each do |post| %>
  <article class='post_card'>
    <div>
      <p><%= post.title%></p>
      <p><%= post.text%></p>
    </div>
  <div class='counters'>
    <p>Comments: <%=post.comments_counter%><br></p>
    <p>Likes: <%=post.likes_counter%><br></p>
  </div>
  </article>
  <% end %>
<% end %>
</section>

<div class='create_button_container'>
  <%= link_to 'See all posts', user_posts_url(@user.id), class: 'create_button'%>
</div>
